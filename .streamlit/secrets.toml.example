# Streamlit secrets configuration template
# Copy this file to secrets.toml and fill in your actual values.
# secrets.toml is listed in .gitignore and must never be committed to version control.

[database]
username = "your_db_username"
host = "your_db_host"
port = 3306
database = "your_db_name"

# Use either password (plain text) or password_encrypted (Fernet-encrypted), not both.
# If password is set, it takes precedence over password_encrypted.
password = "your_db_password"
# password_encrypted = "your_fernet_encrypted_password"

# Optional: Fernet key used to decrypt password_encrypted (required only when using password_encrypted)
# DB_SECRET_KEY = "your_fernet_key"
